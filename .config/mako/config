# ======================= mako quick usage =======================
# Reload:
#   pkill -x mako 2>/dev/null; mako &
# Smoke tests:
#   notify-send "Build finished" "No errors"
#   notify-send -u critical "Battery low" "Plug in now"
#   notify-send -i dialog-information "With icon" "Icon render check"
#
# Sort order:
#   sort=-time is default. You can use +time, -priority, +priority.
#
# Urgencies you can match in sections:
#   [urgency=low], [urgency=normal], [urgency=critical]
#
# Markup:
#   markup=1 enables Pango. You can use <b>bold</b>, <i>italic</i> in format and bodies.
#
# Colors and opacity:
#   Colors accept #RRGGBB or #RRGGBBAA. The last AA controls opacity.
#
# Corners:
#   border-radius supports 1 to 4 comma-separated values
#   (all, vertical-horiz, top-horiz-bottom, top-right-bottom-left).
#
# Icons:
#   icons=1 toggles icons. max-icon-size caps size.
#   icon-border-radius rounds icon corners.
#
# Position:
#   anchor=top-right|top-center|... sets screen corner or center.
#   layer=overlay keeps notifications above fullscreen apps.
#
# History and control:
#   max-history controls how many expired items are kept.
#   Clear everything: makoctl dismiss -a
#
# Do not disturb mode:
#   Enable:  makoctl mode -a do-not-disturb
#   Disable: makoctl mode -r do-not-disturb
#
# Matching order matters:
#   If several sections match, the last one wins.
#
# Autostart in Hyprland:
#   Put this in hyprland.conf:  exec-once = mako
# ================================================================

# ===== Catppuccin Mocha (fixed & clean) =====
layer=overlay
anchor=top-right
margin=30,30,0,0
padding=16
border-radius=14
width=430
height=150

# font
font=JetBrainsMono Nerd Font Medium 12

# palette
# base #1e1e2e | surface0 #313244 | text #cdd6f4
# blue #89b4fa | mauve #cba6f7 | red #f38ba8 | overlay2 #6c7086

# defaults
background-color=#1e1e2ecc
text-color=#cdd6f4
border-color=#89b4fa
border-size=3
progress-color=#cba6f7
icons=1
max-icon-size=56
icon-border-radius=8
sort=-time
max-history=60
max-visible=5
markup=1
text-alignment=left
format=<span foreground="#b4befe" weight="bold">%s</span>\n<span foreground="#cdd6f4">%b</span>

# behavior
default-timeout=6500
ignore-timeout=0

# per-urgency
[urgency=low]
background-color=#313244cc
text-color=#bac2de
border-color=#6c7086
default-timeout=3500

[urgency=normal]
background-color=#1e1e2ecc
text-color=#cdd6f4
border-color=#89b4fa

[urgency=critical]
background-color=#1e1e2ecc
text-color=#cdd6f4
border-color=#f38ba8
progress-color=#f38ba8
default-timeout=0
ignore-timeout=1

